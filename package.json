{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon ./bin/www",
    "format": "find -name '*.js' -not -path './node_modules/*' | xargs prettier --write",
    "lint": "./node_modules/.bin/eslint .",
    "test": "NODE_ENV=test mocha --recursive --exit tests/",
    "clean": "npm run format && npm run lint",
    "resetDatabase": "sequelize db:drop; sequelize db:create && sequelize db:migrate && sequelize db:seed",
    "resetTestDatabase": "NODE_ENV=test sequelize db:drop; NODE_ENV=test sequelize db:create && NODE_ENV=test sequelize db:migrate"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "morgan": "~1.9.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.39.0"
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "supertest": "^3.3.0"
  }
}
